
  <section id="rides" class="container">

	{{#each rides}}
	<div class="w-100 p-3" style="background-color: rgba(255, 255, 255, .8); width: 18rem;">

	<div class="ride">
	<h3 align="center">From {{origin}} to {{location}}, {{destination}}</h3> 
		</div>
		<ul style="list-style: none">
			<li>Posted by {{name}}</li>
			<br>
			<li>Time: {{shortTime time}}</li>
			<li>Date: {{shortDate date}}</li>
			<li>Seats Available: {{number_of_seats}}</li>
			<li>Price: ${{price}} per person</li>
			<br>
			<li>
				<a href="mailto:{{contact_email}}" class="btn btn-dark">Message {{name}}</a>
			</li>
		</ul>
		<ul>
			<li style="list-style: none">
				<p>{{message}}</p>
			</li>
		</ul>
		</div>
		<br>
		{{else}}
			<div class="w-100 p-3" style="background-color: rgba(255, 255, 255, .8);">
			<p align="center">No rides to list</p>
		</div>
		{{/each}}
  </section>
